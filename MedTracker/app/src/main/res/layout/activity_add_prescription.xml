<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPrescription">

    <TextView
        android:id="@+id/title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add your Medicine"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-condensed"
        android:textSize="26sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="550dp"
        android:text="Submit"
        />

    <Button
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="550dp"
        android:text="Clear"
        />

    <ImageButton
        android:id="@+id/viewall"
        android:layout_width="65dp"
        android:layout_height="53dp"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/view_round"
        android:text="View your prescription" />

    <TextView
        android:id="@+id/title3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medicine Name"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="80dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/medname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="80dp"
        android:ems="7"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/title4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Morning Time"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="130dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/title5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dosage"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="180dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/title6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Afternoon Time"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="230dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/title7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dosage"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="280dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/title8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Night Time"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="330dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/title9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dosage"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="380dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/title10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medicine quanity"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="430dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/mornDos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="7"
        android:inputType="number"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="180dp"/>

    <EditText
        android:id="@+id/aftDos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="7"
        android:inputType="number"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="280dp"/>

    <EditText
        android:id="@+id/nigDos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="7"
        android:inputType="number"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="380dp"/>

    <EditText
        android:id="@+id/quani"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="7"
        android:inputType="number"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="430dp"/>

    <EditText
        android:id="@+id/mornTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="130dp"
        android:ems="5"
        android:inputType="time" />

    <EditText
        android:id="@+id/aftTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="5"
        android:inputType="time"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="230dp"/>

    <EditText
        android:id="@+id/nigTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="5"
        android:inputType="time"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="330dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Record Your Audio"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="480dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Record"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="480dp"/>

    <Button
        android:id="@+id/stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="480dp"/>

    <ImageButton
        android:id="@+id/selectmor"
        android:layout_width="48dp"
        android:layout_height="54dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="130dp"
        android:src="@mipmap/clock_round"
        android:text="Time" />

    <ImageButton
        android:id="@+id/selectaft"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="226dp"
        android:src="@mipmap/clock_round"
        android:text="Time" />

    <ImageButton
        android:id="@+id/selectnig"
        android:layout_width="47dp"
        android:layout_height="54dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="320dp"
        android:src="@mipmap/clock_foreground"
        android:text="Time" />

    <Button
        android:id="@+id/updatequant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="550dp"
        android:text="Update"
         />

    <Button
        android:id="@+id/deletemedicine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="550dp"
        />


</RelativeLayout>